@model Project.Models.Users;
@{
    ViewBag.Title = "Create";
}

<h2>회원가입</h2>
@using (Html.BeginForm("Createpost", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td>아이디</td>
            <td>@Html.TextBoxFor(m => m.userId)</td>
        </tr>
        <tr>
            <td>비밀번호</td>
            <td>@Html.TextBoxFor(m => m.pwd)</td>
        </tr>
        <tr>
            <td> 이름</td>
            <td>@Html.TextBoxFor(m => m.userName)</td>
        </tr>
        <tr>
            <td> 휴대폰번호</td>
            <td>@Html.TextBoxFor(m => m.userPhone)</td>
        </tr>
        <tr>
            <td> 이메일</td>
            <td>@Html.TextBoxFor(m => m.userEmail)</td>
        </tr>
        <tr>
            <td> 주소</td>
            <td>@Html.TextBoxFor(m => m.userAddr)</td>
        </tr>
        <tr>
            <td> 성별</td>
            <td>@Html.TextBoxFor(m => m.gender)</td>
        </tr>

        <tr>
            <td colstan="2">
                <button type="submit" id="CreateCheck" class="btn btn-primary">확인</button>
            </td>
        </tr>
    </table>
}