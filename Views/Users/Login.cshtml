@model Project.Models.Users;
@{
    ViewBag.Title = "Login";
}

<h2>로그인</h2>
@using (Html.BeginForm("Loginpost", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <table>
        <tr>
            <td>아이디</td>
            <td>@Html.TextBoxFor(m => m.userId)</td>
        </tr>
        <tr>
            <td>비밀번호</td>
            <td>@Html.TextBoxFor(m => m.pwd)</td>
        </tr>

        <td colstan="2">
            <button type="submit" id="loginCheck" class="btn btn-primary">Login</button>
        </td>

    </table>
}